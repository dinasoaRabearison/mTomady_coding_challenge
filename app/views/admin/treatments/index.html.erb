
<section class="container-fluid row">
  <h1>Clinic treatments list</h1>
</section>
<section class="container-fluid row">
  <ul class="list-group-flush row">
    <li class="list-group-item mb-3">
      <div class="row g-0">
        <div class="col-md-2">
          <h3 class="rw-bold">Category</h3>
        </div>
        <div class="col-md-8">
          <h3 class="rw-bold">Treatments</h3>
        </div>
      </div>
    </li>
    <% @categorys.each do |category|  %>
      <li class="list-group-item mb-3">
        <div class="row g-0">
          <div class="col-md-2 p-3">
            <h6 class="rw-bold"><%= category.categoryName %></h6>
          </div>
          <div class="col-md-8">
            <div class="list-group-flush">
              <% @treatments.each do |treatment| %>
                <% if treatment.category_id == category.id %>
                  <%= link_to treatment.treatmentName, admin_treatment_url(id:treatment.id), class:"list-group-item list-group-item-action" %>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      </li>
    <% end %>
  </ul>
</section>