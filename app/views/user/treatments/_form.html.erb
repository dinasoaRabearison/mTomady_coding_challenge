<%= form_with model: [:user, treatment],url: link, method: verb, class:"container m-3 mb-4 w-25" do |form| %>
  <%= form.hidden_field :id, value: treatment.id %>
  <div class="row mt-3">
    <%= form.label :patientName, value="Username", class:"form-label" %><br>
    <%= form.text_field :patientName,
     size: "40x5",
     placeholder: "Write your name here",
     class:"form-control",
     required: true %>
  </div>
  <div class="row mt-3">
    <%= form.label :treatmentName, class:"form-label", value:"The selected treatment" %><br>
    <%= form.text_field :treatmentName,
     value: render("treatmentName", translations: @translations,
      treatment: treatment,
      locale: @locale),
      class:"form-control",
     readonly: true %>
  </div>
  <div class="row mt-3">
    <%= form.submit "Confirm selection", class:"btn btn-success" %>
  </div>
<% end %>